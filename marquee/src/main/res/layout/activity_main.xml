<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#a2cdff"
        android:gravity="center_horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="♥新长征路上的你，测一下自己的路途"
        android:textColor="#000d23"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <FrameLayout
        android:id="@+id/fl_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:background="@drawable/gdi"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_item_img">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g1" />

                    <ImageView
                        android:id="@+id/iv_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp" />

                    <View
                        android:id="@+id/v1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_corner"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/g1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90ffeb3b"
                        android:visibility="gone" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_item_img">

                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g2" />

                    <ImageView
                        android:id="@+id/iv_num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp" />

                    <View
                        android:id="@+id/v2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90000000"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/g2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90ffeb3b"
                        android:visibility="gone" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_item_img">

                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g3" />

                    <ImageView
                        android:id="@+id/iv_num3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp" />

                    <View
                        android:id="@+id/v3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/right_corner"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/g3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90ffeb3b"
                        android:visibility="gone" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_item_img">

                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g4" />

                    <ImageView
                        android:id="@+id/iv_num4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp" />

                    <View
                        android:id="@+id/v4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90000000"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/g4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90ffeb3b"
                        android:visibility="gone" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_item_img">

                    <ImageView
                        android:id="@+id/center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <View
                        android:id="@+id/v5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90000000"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/g5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#eeeeee"
                        android:visibility="visible" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_item_img">

                    <ImageView
                        android:id="@+id/iv6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g6" />

                    <ImageView
                        android:id="@+id/iv_num6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp" />

                    <View
                        android:id="@+id/v6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90000000"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/g6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90ffeb3b"
                        android:visibility="gone" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_item_img">

                    <ImageView
                        android:id="@+id/iv7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g7" />

                    <ImageView
                        android:id="@+id/iv_num7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp" />

                    <View
                        android:id="@+id/v7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_corner_bottom"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/g7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90ffeb3b"
                        android:visibility="gone" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g8" />

                    <ImageView
                        android:id="@+id/iv_num8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp" />

                    <View
                        android:id="@+id/v8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90000000"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/g8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90ffeb3b"
                        android:visibility="gone" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/g9" />

                    <ImageView
                        android:id="@+id/iv_num9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp" />

                    <View
                        android:id="@+id/v9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/right_corner_bottom"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/g9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#90ffeb3b"
                        android:visibility="gone" />

                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/fl_view"
        android:background="@drawable/btn_rect"
        android:text="开始游戏"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>